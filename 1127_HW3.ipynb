   ],
   "source": [
    "def hanoi(n, A, B, C):\n",
    "    if n == 1:\n",
    "        return [(A, C)]\n",
    "    else:\n",
    "        return hanoi(n-1, A, C, B) + hanoi(1, A, B, C) + hanoi(n-1, B, A, C)\n",
    "\n",
    "n = input(\"請輸入整數：\")\n",
    "for move in hanoi(int(n), 'A', 'B', 'C'):\n",
    "    print(\"由 %c 移至 %c\" % move)"
   ]
